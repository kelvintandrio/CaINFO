<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_movie"
    android:orientation="horizontal"
    style="@style/LayoutWidthHeightTypeTwo"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardCornerRadius="8dp"
        android:focusable="true">

        <ImageView
            android:id="@+id/imgPosterMovie"
            android:src="@drawable/sample_poster_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        style="@style/LayoutWidthHeightTypeOne"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/tvTitleMovie"
            style="@style/LayoutWidthHeightTypeTwo"
            android:layout_marginTop="8dp"
            android:text="@string/title"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvReleaseDateMovie"
            android:text="@string/date"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            style="@style/LayoutWidthHeightTypeTwo"/>

    </LinearLayout>

</LinearLayout>